<!DOCTYPE html>
<html>
  <head>
    <title>ClaimsDemo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>


  <script>
    window.claimsdemologoURL = "<%=image_url('logo.png')%>"
  </script>

  <% if current_user %>
    <script>
      window.currentUser = <%= render(
        "api/users/user.json.jbuilder",
        user: current_user
      ).html_safe%>
    </script>
  <% end %>

  <body>
    <%= yield %>
  </body>
</html>
